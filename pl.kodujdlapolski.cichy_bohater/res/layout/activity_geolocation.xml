<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/geolocation_map"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/geolocation_nav"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" >

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/geolocation_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/geolocation_footer"
        android:gravity="center" >

        <Button
            android:id="@+id/geolocation_use_gps_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/ic_10_device_access_location_searching"
            android:text="@string/find_me" />
        
         <Button
            android:id="@+id/geolocation_use_map_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/ic_10_device_access_location_searching"
            android:text="@string/find_me" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/geolocation_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/geolocation_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="onOkClick"
            android:text="@string/next" />
    </LinearLayout>

</RelativeLayout>