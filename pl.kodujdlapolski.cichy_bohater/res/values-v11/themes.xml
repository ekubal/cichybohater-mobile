<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="CichyBohaterTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/WhiteActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/WhiteActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:windowBackground">@color/activity_background</item>
        <item name="android:textViewStyle">@style/CichyBohaterTextViewStyle</item>
        <item name="android:buttonStyle">@style/CichyBohaterButtonStyle</item>
        <item name="android:editTextStyle">@style/CichyBohaterEditTextStyle</item>
        <item name="android:checkboxStyle">@style/CichyBohaterCheckBoxStyle</item>
    </style>

    <style name="WhiteActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="WhiteActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="WhiteActionBarTabText" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="CichyBohaterTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CichyBohaterCheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CichyBohaterButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/button_background_color</item>
    </style>

    <style name="CichyBohaterEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/category_list_item_shape</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

</resources>